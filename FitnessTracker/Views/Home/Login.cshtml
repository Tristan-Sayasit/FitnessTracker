@model LoginSignupViewModel
<div class="container">
    <div class="text-center m-4">
        <h3>Login</h3>
    </div>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-controller="Home">
                        <div class="mb-3">
                            <label for="usernameInput" class="form-label">Username</label>
                            <input type="text" asp-for="UserName" class="form-control" id="usernameInput" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" id="passwordInput">
                        </div>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Home" asp-action="Signup" id="signUpBtn" type="button" class="btn btn-primary me-4">Sign Up</a>
                            <button id="loginBtn" type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>